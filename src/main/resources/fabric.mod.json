{
  "schemaVersion": 1,
  "id": "footprintparticle",
  "version": "${version}",

  "name": "Footprint Particle",
  "description": "A simple mod that adds footprint for mobs (and players).",
  "authors": [
    "Rimo"
  ],
  "contact": {
    "homepage": "https://www.curseforge.com/minecraft/mc-mods/footprintparticle",
    "issues": "https://github.com/Rivmun/footprintparticle/issues",
    "sources": "https://github.com/Rivmun/footprintparticle"
  },

  "license": "GPL-3.0",
  "icon": "assets/footprintparticle/icon.png",

  "environment": "client",
  "entrypoints": {
    "client": [
      "rimo.footprintparticle.FPPClient"
    ],
    "modmenu": [ 
      "rimo.footprintparticle.config.ModMenuIntegration"
    ]
  },
  "mixins": [
    "footprintparticle.mixins.json"
  ],

  "depends": {
    "fabricloader": ">=0.14.10",
    "fabric-api": "*",
    "minecraft": "~1.18.2",
    "java": ">=17",
    "cloth-config2":"*"
  },
  "suggests": {
    "modmenu": "*"
  },
  "custom": {
    "modmenu": {
      "links": {
        "modmenu.modrinth": "https://modrinth.com/mod/footprintparticle"
      }
    }
  }
}
